<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollid"
        android:layout_width="402dp"
        android:layout_height="30dp"
        android:layout_marginBottom="6dp"
        android:scrollbarFadeDuration="300"
        android:verticalScrollbarPosition="right"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="411dp"
        android:layout_height="348dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="104dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="OnNumberClicked"
                android:text="1"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="104dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="OnNumberClicked"
                android:text="2"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="104dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="OnNumberClicked"
                android:text="3"
                android:textSize="34sp" />

            <Button
                android:id="@+id/delenie"
                android:layout_width="104dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="OnNumberClicked"
                android:text="/"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="104dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="OnNumberClicked"
                android:text="4"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="104dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="OnNumberClicked"
                android:text="5"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="104dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="OnNumberClicked"
                android:text="6"
                android:textSize="34sp" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="104dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="OnNumberClicked"
                android:text="*"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="104dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="OnNumberClicked"
                android:text="7"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="104dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="OnNumberClicked"
                android:text="8"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="104dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="OnNumberClicked"
                android:text="9"
                android:textSize="34sp" />

            <Button
                android:id="@+id/minus"
                android:layout_width="104dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="OnNumberClicked"
                android:text="-"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="105dp">

            <Button
                android:id="@+id/btnC"
                android:layout_width="104dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="reset"
                android:text="C"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="104dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="OnNumberClicked"
                android:text="0"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnFloat"
                android:layout_width="104dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="OnNumberClicked"
                android:text="."
                android:textSize="34sp" />

            <Button
                android:id="@+id/plus"
                android:layout_width="104dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="OnNumberClicked"
                android:text="+"
                android:textSize="34sp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="412dp"
        android:layout_height="90dp"
        android:layout_marginBottom="76dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/upBtn"
        android:layout_width="82dp"
        android:layout_height="44dp"
        android:layout_marginBottom="4dp"
        android:onClick="up"
        android:text="Выше"
        app:layout_constraintBottom_toTopOf="@+id/scrollid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/downBtn" />

    <Button
        android:id="@+id/downBtn"
        android:layout_width="85dp"
        android:layout_height="44dp"
        android:layout_marginBottom="4dp"
        android:onClick="down"
        android:text="Ниже"
        app:layout_constraintBottom_toTopOf="@+id/scrollid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.739"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/equal"
        android:layout_width="73dp"
        android:layout_height="79dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="equals"
        android:text="="
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>